.navbar.navbar-default.navbar-fixed-top(ng-controller='NavbarCtrl')
    .container
        .navbar-header
            button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(ui-sref='main') Hokui.net

        #navbar-main.navbar-collapse.collapse(collapse='isCollapsed')
            ul.nav.navbar-nav
                li(ng-repeat='item in items', ng-class="{ active: isActive(item.link) }")
                    a(ui-sref='{{item.link}}') {{item.title}}

            ul.nav.navbar-nav.navbar-right
                li
                    a(ui-sref='{{auth.link}}') {{auth.title}}

