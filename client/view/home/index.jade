
.col-sm-12.col-md-10.col-md-push-1

    h1 Welcome to hokui.net
    h2 おしらせ
    loading(show="{{!newss}}")
    ul.news(v-show="newss")
        li(v-repeat="news: newss")
            a.news-link.clickable(v-on="click: preview(news)")
                date-badge.news-date(value="{{news.created_at}}")
                .news-title {{news.title}}

    p {{async}}
    
modal(open="{{@ previewing}}" title="{{selectedNews?selectedNews.title:''}}")
    
    div(v-html="selectedNewsContent")
