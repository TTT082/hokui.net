form.form-horizontal(role="form" ng-submit="doSaveSemester()")
    .panel.panel-default
        .panel-heading
            h3 {{title}}
        .panel-body
            .form-group
                label.control-label.col-md-2(for="semesterInputIdentifier") 識別子
                .col-md-10
                    input.form-control(type="text" placeholder="名前(日本語)" id="semesterInputIdentifier" ng-model="new_semester.identifier")

            .form-group
                label.control-label.col-md-2(for="semesterInputClassYear") 学年
                .col-md-10
                    select.form-control(ng-model="new_semester.class_year_id" id="semesterInputClassYear" ng-options="class_year.id as class_year.year for class_year in class_years")

            .form-group
                label.control-label.col-md-2 教科
                .col-md-10.checkbox
                    div(ng-repeat="subject in subjects")
                        label
                            input(type="checkbox"
                                  ng-checked="new_semester.subject_ids.indexOf(subject.id) > -1"
                                  ng-click="subjectCheckboxChange(subject)")
                            | {{subject.title_ja}} - {{subject.title_en}}



        .panel-footer.clearfix
            .pull-left
                div(ng-if="editing")
                    a.btn.btn-default(ui-sref="admin.semester.detail({id: semester.id})") 戻る
                div(ng-if="!editing")
                    a.btn.btn-default(ui-sref="admin.semester") 戻る
            .pull-right
                button.btn.btn-primary(type="submit") 保存
                button.btn.btn-danger(type="button" ng-if="editing" ng-click="deleteSemester()") {{deleteBtnLabel()}}
                button.btn.btn-sm.btn-default(type="button" ng-if="deleting" ng-click="stopDeleting()") やっぱりやめる
